@model Category
@{
    ViewData["Title"] = "Create Category";
    Layout = "_Layout";
}

<form method="post">
    <div class="container">
        <div class="row p-3 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            @if (Model.CategoryId != 0)
            {
                ViewData["Title"] = "Edit Category";
                Layout = "_Layout";
            }
            <div class="col-12 border-bottom">
                <h2 class="text-danger">@ViewData["Title"]</h2>
            </div>
            <div class="col-8 pt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4 offset-4">
                        @if (Model.CategoryId != 0)
                        {
                            <button type="submit" class="btn btn-danger form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger form-control">Create</button>
                        }
                    </div>
                    <div class="col-4">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-danger form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}