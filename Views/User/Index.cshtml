@model IEnumerable<ApplicationUserViewModel>

@{
    ViewData["Title"] = "Users";
    Layout = "_Layout";
}

<br />
<br />
<div class="container">
    <div class="border p-4 bg-white">
        <div class="row">
            <div class="col-10">
                <h2 class="text-danger">Users List</h2>
            </div>
        </div>
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table">
                    <tr class="table">
                        <th>
                            User Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Roles
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.UserName
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                @item.Role
                            </td>
                            <td>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No user exists...</p>
            }
        </div>
    </div>
</div>
<br />
<br />