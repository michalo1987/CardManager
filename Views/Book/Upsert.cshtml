@model BookViewModel

@{
    ViewData["Title"] = "Create Book";
    var currentBookId = Model.Book?.Id ?? 0;
}

<form method="post" asp-action="Upsert" asp-controller="Book">
    <div class="container">
        <div class="row p-3 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="Book.Id" />*@

            <input type="hidden" name="Book.Id" value="@currentBookId" />
 
            @if (Model.Book != null)
            {
                ViewData["Title"] = "Edit Book";
            }
            <div class="col-12 border-bottom">
                <h2 class="text-danger">@ViewData["Title"]</h2>
            </div>
            <div class="col-8 pt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Book.Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Book.Title" class="form-control" />
                        <span asp-validation-for="Book.Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4">
                        <label asp-for="Book.ISBN"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Book.ISBN" class="form-control" />
                        <span asp-validation-for="Book.ISBN" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4">
                        <label asp-for="Book.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Book.Price" class="form-control" />
                        <span asp-validation-for="Book.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4">
                        <label asp-for="Book.PublisherId"></label>
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(u => u.Book.PublisherId, Model.PublisherList, "--Publisher List--",
                            new { @class = "form-control" })
                        <span asp-validation-for="Book.PublisherId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4">
                        <label asp-for="Book.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(u => u.Book.CategoryId, Model.CategoryList, "--Category List--",
                            new { @class = "form-control" })
                        <span asp-validation-for="Book.CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4 offset-4">
                        @if (Model.Book == null)
                        {
                            <button type="submit" class="btn btn-danger form-control">Create</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger form-control">Update</button>
                        }
                    </div>
                    <div class="col-4">
                        <a asp-controller="Book" asp-action="Index" class="btn btn-outline-danger form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<br />
<br />

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}