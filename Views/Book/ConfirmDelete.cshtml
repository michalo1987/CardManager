@model ConfirmDeleteBookViewModel

@{
    ViewData["Title"] = "Confirm Delete";
    Layout = "_Layout";
}

<form asp-controller="Book" asp-action="Delete" method="post">
    <div class="container">
        <div class="row p-3 border">
            <input type="hidden" asp-for="BookId" />
            <div class="col-12 border-bottom">
                <h2 class="text-danger">@ViewData["Title"]</h2>
            </div>
            <div class="col-8 pt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CategoryName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4">
                        <label asp-for="PublisherName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PublisherName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Title" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4">
                        <label asp-for="ISBN"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ISBN" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4 offset-4">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-4">
                        <a asp-controller="Book" asp-action="Index" class="btn btn-outline-danger form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
