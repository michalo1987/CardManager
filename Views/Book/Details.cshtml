@model BookDetailsViewModel

@{
    var viewName = "Book Details";
    ViewData["Title"] = Model.DetailsExists ? $"Edit {viewName}" : $"Create {viewName}";
    Layout = "_Layout";

    var submitButtonText = Model.DetailsExists ? "Update" : "Create";
}

<form method="post" asp-action="Details" asp-controller="Book">
    <div class="container">
        <div class="row p-3 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookId" />
            <div class="col-12 border-bottom">
                <h2 class="text-danger">@ViewData["Title"]</h2>
            </div>
            <div class="col-8 pt-4">
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4">
                        <label asp-for="NumberOfChapters"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NumberOfChapters" class="form-control" />
                        <span asp-validation-for="NumberOfChapters" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4">
                        <label asp-for="NumberOfPages"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NumberOfPages" class="form-control" />
                        <span asp-validation-for="NumberOfPages" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4">
                        <label asp-for="Weight"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Weight" class="form-control" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-4 mb-3">
                    <div class="col-4 offset-4">
                        <button type="submit" class="btn btn-danger form-control">@submitButtonText</button>
                    </div>
                    <div class="col-4">
                        <a asp-action="Index" class="btn btn-outline-danger form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}