@model IEnumerable<BookViewModel>

@{ 
    ViewData["Title"] = "Book";
    Layout = "_Layout";
}

<br />
<br />
<div class="container">
    <div class="border p-4 bg-white">
        <div class="row">
            <div class="col-10">
                <h2 class="text-danger">Books List</h2>
            </div>
            <div class="col-2 text-right">
                <a asp-controller="Book" asp-action="New" class="btn btn-outline-danger form-control">Create New</a>
            </div>
        </div>
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table">
                    <tr class="table">
                        <th>
                            Category
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Publisher
                        </th>
                        @*<th>
                            Authors
                        </th>*@
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.CategoryName
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Price
                            </td>
                            <td>
                                @item.PublisherName
                            </td>
                            @*<td>
                                @{
                                    var authors = "";
                                }
                                @foreach (var auth in item.BookAuthors)
                                {
                                    authors += @auth.Author.FullName + ", ";
                                }
                                @authors.Trim().TrimEnd(',')
                            </td>*@
                            <td>
                                <a class="btn btn-danger text-white" asp-controller="Book" asp-action="Edit" asp-route-Id="@item.BookId">
                                    Edit
                                </a>
                                <a class="btn btn-info text-white" asp-controller="Book" asp-action="Details" asp-route-Id="@item.BookId">
                                    Details
                                </a>
                                <a class="btn btn-outline-danger table-success" asp-controller="Book" asp-action="Delete" asp-route-Id="@item.BookId">
                                    Delete
                                </a>
                                <a class="btn btn-warning text-white" asp-controller="Book" asp-action="ManageAuthors" asp-route-Id="@item.BookId">
                                    Authors
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No book exists...</p>
            }
        </div>
    </div>
</div>
<br />
<br />