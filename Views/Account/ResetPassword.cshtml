@model ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "_Layout";
}

<div class="container text-center">
    <main class="form-register">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="Account" asp-action="ResetPassword" method="post" role="form">
            <input asp-for="Code" hidden />
            <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="red" class="bi bi-bootstrap-reboot" viewBox="0 0 16 16">
                <path d="M1.161 8a6.84 6.84 0 1 0 6.842-6.84.58.58 0 1 1 0-1.16 8 8 0 1 1-6.556 3.412l-.663-.577a.58.58 0 0 1 .227-.997l2.52-.69a.58.58 0 0 1 .728.633l-.332 2.592a.58.58 0 0 1-.956.364l-.643-.56A6.812 6.812 0 0 0 1.16 8z" />
                <path d="M6.641 11.671V8.843h1.57l1.498 2.828h1.314L9.377 8.665c.897-.3 1.427-1.106 1.427-2.1 0-1.37-.943-2.246-2.456-2.246H5.5v7.352h1.141zm0-3.75V5.277h1.57c.881 0 1.416.499 1.416 1.32 0 .84-.504 1.324-1.386 1.324h-1.6z" />
            </svg>
            <h1 class="h3 mb-3 fw-normal fw-bold">Reset Password</h1>
            <div class="form-floating">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email address">
                <label asp-for="Email" for="floatingInput">Email address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                <label asp-for="Password" for="floatingInput">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating" id="confirmpassword">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
                <label asp-for="ConfirmPassword" for="floatingPassword">ConfirmPassword</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div>
                <button class="w-100 btn btn-lg btn-danger form-control" type="submit" id="registerButton">Reset</button>
                <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
            </div>
        </form>
    </main>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}