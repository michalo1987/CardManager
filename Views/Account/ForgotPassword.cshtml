@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "_Layout";
}

<div class="container text-center">
    <main class="form-signin">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">
            <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="red" class="bi bi-envelope-fill" viewBox="0 0 16 16">
                <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555zM0 4.697v7.104l5.803-3.558L0 4.697zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757zm3.436-.586L16 11.801V4.697l-5.803 3.546z" />
            </svg>
            <h1 class="h3 mb-3 fw-normal fw-bold">Enter your email</h1>
            <div class="form-floating">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email address">
                <label asp-for="Email" for="floatingPassword">Email address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <button class="w-100 btn btn-lg btn-danger form-control" type="submit" id="registerButton">Register</button>
                <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
            </div>
        </form>
    </main>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}