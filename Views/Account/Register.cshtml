@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="container text-center">
    <main class="form-register">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="Account" asp-action="Register" method="post" role="form">
            <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="red" class="bi bi-card-text" viewBox="0 0 16 16">
                <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z" />
            </svg>
            <h1 class="h3 mb-3 fw-normal fw-bold">Create a new account</h1>
            <div class="form-floating">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email address">
                <label asp-for="Email" for="floatingInput">Email address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                <label asp-for="Name" for="floatingInput">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                <label asp-for="Password" for="floatingInput">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating" id="confirmpassword">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
                <label asp-for="ConfirmPassword" for="floatingPassword">ConfirmPassword</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div>
                <button class="w-100 btn btn-lg btn-danger form-control" type="submit" id="registerButton">Register</button>
                <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
            </div>
        </form>
    </main>
</div>

@section Scripts{ 
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}